[bar/base]
monitor = ${env:MONITOR}
; width = 100%:-20
height = 20

; offset-x = 10
; offset-y = 10

background = #2D2A2E

border-size = 2
border-color = #444

module-margin = 2
padding = 1

font-0 = NotoSans-Regular:size=11;2
font-1 = unifont:fontformat=truetype:size=14:antialias=false;0
font-2 = FontAwesome:style=Regular:pixelsize=12;4

wm-restack = bspwm

[bar/main]
inherit = bar/base
width = 100%
modules-right = ethernet wifi battery clock
modules-left = bspwm
scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev
tray-position = right

[module/clock]
type = internal/date
interval = 2

date = %Y-%m-%d

time = %H:%M:%S

label =  %date% 𓄐 %time%

[module/bspwm]
type = internal/bspwm
enable-scroll = false

format = [<label-mode>] <label-state>
label-focused = %name%
label-focused-foreground = #00AAFF
label-dimmed-focused-foreground = #0077CC

label-occupied = %name%
label-occupied-foreground = #FFF

label-empty = %name%
label-empty-foreground = #999

label-urgent = %name%
label-urgent-foreground = #FF2222

label-separator = "  "

label-sticky = S
label-sticky-foreground = #fba922

[module/battery]
type = internal/battery

format-charging = <ramp-capacity> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

[module/wifi]
type = internal/network
interface = wlp1s0

label-connected =  %essid%
label-disconnected = 
label-disconnected-foreground = #999

[module/ethernet]
type = internal/network
interface = enp10s0

label-connected =  %linkspeed%
label-disconnected = 
label-disconnected-foreground = #999
